<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.photohunt.SearchPreferencesFragment">

    <!-- TODO: Update blank fragment layout -->

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/bM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bXL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/segmented1"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:rowCount="3">
        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:background="@color/Black"
                style="@style/RadioButton"
                />

            <RadioButton
                android:id="@+id/bBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bBrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="1"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="1"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="1"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bPurple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="1"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="2"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bTeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="2"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="2"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/bYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:layout_row="2"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        </GridLayout>

</RelativeLayout>
