<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.photohunt.SearchPreferencesFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/ivS"
            android:paddingLeft="30dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivM"
            android:paddingLeft="20dp"
            android:layout_toEndOf="@+id/ivS"
            android:layout_toRightOf="@+id/ivS"
            android:minWidth="60dp"
            android:minHeight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivL"
            android:paddingLeft="10dp"
            android:layout_toEndOf="@+id/ivM"
            android:layout_toRightOf="@+id/ivM"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivXL"
            android:layout_toEndOf="@+id/ivXL"
            android:layout_toRightOf="@+id/ivL"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_below="@+id/ivXL"
            android:paddingLeft="30dp"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/ivS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/rbS" />
        <RadioButton
            android:layout_below="@+id/ivXL"
            android:paddingLeft="20dp"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/ivM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/rbM" />
        <RadioButton
            android:layout_below="@+id/ivXL"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/ivL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/rbL" />
        <RadioButton
            android:layout_below="@+id/ivXL"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/ivXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/rbXL" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rbS"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:columnCount="12">
            <ImageView
                android:id="@+id/ivC1"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"/>
            <ImageView
                android:id="@+id/ivC2"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:background="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"/>
            <ImageView
                android:id="@+id/ivC3"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:background="@android:color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"/>
            <ImageView
                android:id="@+id/ivC4"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"/>
            <ImageView
                android:id="@+id/ivC5"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"/>
            <ImageView
            android:id="@+id/ivC6"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"/>
            <ImageView
                android:id="@+id/ivC7"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
            />
            <ImageView
                android:id="@+id/ivC8"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="7"
                />
            <ImageView
                android:id="@+id/ivC9"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="8"
                />
            <ImageView
                android:id="@+id/ivC10"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="9"
                />
            <ImageView
                android:id="@+id/ivC11"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="10"
                />
            <ImageView
                android:id="@+id/ivC12"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="11"
                />
            </GridLayout>

    </RelativeLayout>


</RelativeLayout>
